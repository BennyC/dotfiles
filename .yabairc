#!/usr/bin/env sh

# global settings
yabai -m config window_placement             second_child
yabai -m config window_topmost               on
yabai -m config window_opacity               on
yabai -m config window_shadow                on
yabai -m config window_border                on
yabai -m config window_border_width          4
yabai -m config active_window_border_color   0x00775759
yabai -m config normal_window_border_color   0x00505050
yabai -m config insert_window_border_color   0xffd75f5f
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.90
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  50 
yabai -m config bottom_padding               50
yabai -m config left_padding                 50
yabai -m config right_padding                50
yabai -m config window_gap                   50

yabai -m space 1 --label "Primary"
yabai -m space 2 --label "Terminal"
yabai -m space 3 --label "Chat"
yabai -m space 4 --label "Media"
yabai -m space 5 --label "Float"

yabai -m config --space 5 layout bsp

yabai -m rule --add app="Visual Studio Code" space=1
yabai -m rule --add app="Google Chrome"      space=1
yabai -m rule --add app="iTerm2"             space=2
yabai -m rule --add app="Slack"              space=3
yabai -m rule --add app="Microsoft Outlook"  space=3
yabai -m rule --add app="Spotify"            space=4

#yabai -m rule --add space 5 manage=off
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^Microsoft Outlook$" title!="^(Calendar|Inbox)" manage=off

echo "yabai configuration loaded.."
